<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:esquire.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="810"
        x:Class="esquire.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="esquire"
        Width="1440" Height="810"
        Name="Main">
	
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	
	<DockPanel>
		
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_Edit">
				<MenuItem Header="_Database" Command="{Binding ShowDatabaseSettingsDialog}"/>
			</MenuItem>
		</Menu>
		
		<Panel DockPanel.Dock="Bottom">
			<ContentControl>
				<vm:LogViewModel/>
			</ContentControl>
		</Panel>
		
		<ContentControl Content="{Binding Page}"/>
		
	</DockPanel>
</Window>
